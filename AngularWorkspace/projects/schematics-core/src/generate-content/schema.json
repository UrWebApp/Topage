{
  "$schema": "http://json-schema.org/schema",
  "id": "SchematicsGenerateContent",
  "title": "Generate Content Options",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the file."
    },
    "category": {
      "type": "string",
      "description": "The category of the content."
    },
    "language": {
      "type": "string",
      "description": "The language code (e.g., zh-tw, en).",
      "default": "zh-tw"
    }
  },
  "required": ["name", "category"]
}
