{
  "name": "angular-workspace",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "build:ssg-site": "ng build ssg-site --aot --optimization --progress",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "///1": "SSR 編譯",
    "serve:ssr:ssg-site": "node dist/ssg-site/server/server.mjs",
    "///2": "schematics TS 編譯 JS，實際執行時是執行 JS",
    "build-schematics": "tsc -p ./projects/schematics-core/tsconfig.json",
    "///3": "開發時使用方便監聽並編譯",
    "build-schematics-watch": "tsc -p ./projects/schematics-core/tsconfig.json --watch",
    "gmf": "cd ./projects/schematics-core && schematics .:generateMarkdownFile --dry-run=false",
    "ng-gmf": "ng g ./projects/schematics-core/src/collection.json:generateMarkdownFile",
    "ng-ur": "ng g ./projects/schematics-core/src/collection.json:updateRouteTxt",
    "ng-add-md": "pnpm run ng-gmf && pnpm run ng-ur"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/core": "^18.2.8",
    "@angular-devkit/schematics": "^18.2.7",
    "@angular-workspace/schematics-core": "file:./projects/schematics-core",
    "@angular/animations": "^18.1.0",
    "@angular/cdk": "18.2.6",
    "@angular/common": "^18.1.0",
    "@angular/compiler": "^18.1.0",
    "@angular/core": "^18.1.0",
    "@angular/fire": "18.0.1",
    "@angular/forms": "^18.1.0",
    "@angular/platform-browser": "^18.1.0",
    "@angular/platform-browser-dynamic": "^18.1.0",
    "@angular/platform-server": "^18.1.0",
    "@angular/router": "^18.1.0",
    "@angular/service-worker": "^21.0.8",
    "@angular/ssr": "^18.2.6",
    "@types/js-yaml": "^4.0.9",
    "express": "^4.18.2",
    "highlight.js": "^11.10.0",
    "js-yaml": "^4.1.0",
    "marked": "^14.1.3",
    "marked-highlight": "^2.2.0",
    "rxjs": "~7.8.0",
    "swiper": "^11.1.14",
    "tslib": "^2.3.0",
    "zone.js": "~0.14.3"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^18.2.6",
    "@angular/cli": "^18.1.4",
    "@angular/compiler-cli": "^18.1.0",
    "@tailwindcss/typography": "^0.5.19",
    "@types/express": "^4.17.17",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^18.18.0",
    "autoprefixer": "^10.4.21",
    "jasmine-core": "~5.1.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "ng-packagr": "^18.2.0",
    "postcss": "^8.5.4",
    "tailwindcss": "3",
    "typescript": "~5.5.2"
  }
}
